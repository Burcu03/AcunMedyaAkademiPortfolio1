@model AcunMedyaAkademiPortfolio1.Models.TblCategory
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kategori Güncelleme</h2>
<form method="post">
    <label> Kategori ID </label>
    @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })

    <label> Kategori Adı </label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })

    <button class="btn btn-info"> Kategori Bilgilerini Güncelle </button>
</form>
