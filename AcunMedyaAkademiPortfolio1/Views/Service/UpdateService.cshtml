@model AcunMedyaAkademiPortfolio1.Models.TblService
@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Servis Bilgisini Güncelleme</h2>
<form method="post">
    <label> Servis Adı </label>
    @Html.TextBoxFor(x => x.ServiceId, new { @class = "form-control" })

    <label> Servis Adı </label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })

    <label> Açıklaması </label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

    <label> İkon </label>
    @Html.TextBoxFor(x => x.IconUrl, new { @class = "form-control" })


    <button class="btn btn-info"> Servisi Güncelle </button>
</form>
