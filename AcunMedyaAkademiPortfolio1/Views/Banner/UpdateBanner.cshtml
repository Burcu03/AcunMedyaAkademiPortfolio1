@model AcunMedyaAkademiPortfolio1.Models.TblBanner
@{
    ViewBag.Title = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateBanner</h2>
<form method="post">
    <label> Başlık </label>
    @Html.TextBoxFor(x => x.BannerId, new { @class = "form-control" })

    <label> Başlık </label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })

    <label> Açıklama </label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

    <label> Resmi </label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })

    <button class=*@"btn btn-info"> Bilgileri Güncelle </button>
</form>